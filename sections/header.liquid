<header class="header">
  <h2 class="header__logo">
    {{ section.settings.shop_name | default: shop.name | link_to: routes.root_url }}
  </h2>

  <nav class="header__nav">
    {% for link in section.settings.menu.links %}
      {{ link.title | link_to: link.url }}
    {% endfor %}
  </nav>

  <div class="header__icons">
      <button aria-label="Search">
        <svg
          class="icon"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
        >
          <circle cx="11" cy="11" r="8"/>
          <path d="m21 21-4.3-4.3"/>
        </svg>
      </button>
      <button aria-label="Cart">
        <svg
          class="icon"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
        >
          <path d="M6 2 3 6v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2V6l-3-4Z"/>
          <path d="M3 6h18"/>
          <path d="M16 10a4 4 0 0 1-8 0"/>
        </svg>
      </button>
    </div>
</header>

{% stylesheet %}
.header {
      display: flex;
      align-items: center;
      justify-content: space-between;
      padding: 1.5rem 2rem;
      border-bottom: 1px solid var(--border);
    }

    .header__logo {
      font-size: 1.5rem;
      font-weight: 600;
      letter-spacing: -0.025em;
      font-family: Orbitron, sans-serif;
    }

    .header__logo a {
      text-decoration: none;
      color: inherit;
    }

    .header__nav {
      display: flex;
      align-items: center;
      gap: 2rem;
    }

    .header__nav a {
      text-decoration: none;
      color: var(--color-foreground);
      opacity: 0.7;
      transition: opacity 0.2s ease;
    }

    .header__nav a:hover {
      opacity: 1;
    }

    .header__icons {
      display: flex;
      align-items: center;
      gap: 1rem;
    }

    .header__icons button {
      background: none;
      border: none;
      color: var(--color-foreground);
      cursor: pointer;
      transition: opacity 0.2s ease;
      padding: 0;
      display: flex;
      align-items: center;
      justify-content: center;
    }

    .header__icons button:hover {
      opacity: 0.7;
    }

    .icon {
      width: 1.5rem;
      height: 1.5rem;
    }

    /* Hide nav on mobile */
    @media (max-width: 768px) {
      .header__nav {
        display: none;
      }
    }

{% endstylesheet %}

{% schema %}
{
  "name": "t:general.header",
  "settings": [
    {
      "type": "link_list",
      "id": "menu",
      "label": "t:labels.menu"
    },
    {
      "type": "text",
      "id": "shop_name",
      "label": "t:labels.shop_name"
    }
  ]
}
{% endschema %}
