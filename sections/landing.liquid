<section class="hero">
  <div class="hero__container">
    <!-- Left - Headline -->
    <div class="hero__content">
      <span class="hero__tag">New Season</span>
      <h1 class="hero__title">
        Minimal Design,<br>
        <span>Maximum Style</span>
      </h1>
      <p class="hero__description">
        Discover our curated collection of contemporary essentials. Crafted with precision, designed for the modern
        lifestyle.
      </p>
      <div class="hero__buttons">
        <button class="btn btn--primary">Shop Now</button>
        <button class="btn btn--outline">View Lookbook</button>
      </div>
    </div>

    <!-- Right - Popular Products -->

    {% assign popular_product1 = collections.all.products[0] %}
    {% assign popular_product2 = collections.all.products[1] %}

    <div class="hero__sidebar">
      <div class="hero__sidebar-title">Popular Now</div>

      <div class="popular-card">
        <div class="popular-card__image">
          {% render 'image', image: popular_product1.featured_image, width: 400, height: 400 %}
        </div>
        <div class="popular-card__content">
          <h3 class="popular-card__name">{{ popular_product1.title }}</h3>
          <button class="btn-price">{{ popular_product1.price | money }}</button>
        </div>
      </div>

      <div class="popular-card">
        <div class="popular-card__image">
          {% render 'image', image: popular_product2.featured_image, width: 400, height: 400 %}
        </div>
        <div class="popular-card__content">
          <h3 class="popular-card__name">{{ popular_product2.title }}</h3>
          <button class="btn-price">{{ popular_product2.price | money }}</button>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- PRODUCTS SECTION -->
<section class="products">
  <div class="products__container">
    <div class="products__header">
      <h2 class="products__title">All Products</h2>
      {% comment %}
        <div class="products__filters">
          <button>Filter</button>
          <button>Sort</button>
        </div>
      {% endcomment %}
    </div>

    <div class="products__grid">
      {% assign products = collections.all.products %}
      {% if products.size > 0 %}
        {% for product in products %}
          <!-- Product 1 -->
          <div class="product-card">
            <div class="product-card__image">
              {% render 'image', image: product.featured_image, width: 400, height: 400 %}
            </div>
            <div class="product-card__content">
              <h3 class="product-card__name">{{ product.title }}</h3>
              <button class="btn-price">{{ product.price | money }}</button>
            </div>
          </div>
        {% endfor %}
      {% else %}
        <p>No products found in the 'all' collection.</p>
      {% endif %}
    </div>
  </div>
</section>

{% stylesheet %}
  .hero {
    padding: 4rem 2rem;
    background: radial-gradient(ellipse at 30% 20%, rgba(127, 140, 170, 0.15) 0%, transparent 50%),
      radial-gradient(ellipse at 70% 80%, rgba(184, 207, 206, 0.1) 0%, transparent 50%);
  }

  .hero__container {
    max-width: 80rem;
    margin: 0 auto;
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 3rem;
    align-items: stretch;
  }

  @media (max-width: 1024px) {
    .hero__container {
      grid-template-columns: 1fr;
    }
  }

  /* Hero Left - Headline */
  .hero__content {
    display: flex;
    flex-direction: column;
    justify-content: center;
  }

  .hero__tag {
    color: var(--color-primary);
    font-size: 0.875rem;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    margin-bottom: 1rem;
  }

  .hero__title {
    font-size: 3.5rem;
    font-weight: 600;
    line-height: 1.1;
    margin-bottom: 1.5rem;
  }

  .hero__title span {
    color: var(--color-secondary);
  }

  .hero__description {
    color: var(--muted-foreground);
    font-size: 1.125rem;
    max-width: 28rem;
    margin-bottom: 2rem;
    line-height: 1.7;
  }

  .hero__buttons {
    display: flex;
    gap: 1rem;
  }

  .btn {
    padding: 0.75rem 2rem;
    border-radius: 0.5rem;
    font-weight: 500;
    font-size: 1rem;
    cursor: pointer;
    transition: all 0.2s ease;
    font-family: inherit;
  }

  .btn--primary {
    background-color: var(--color-primary);
    color: var(--background);
    border: none;
  }

  .btn--primary:hover {
    background-color: var(--color-secondary);
  }

  .btn--outline {
    background: transparent;
    border: 1px solid var(--color-primary);
    color: var(--foreground);
  }

  .btn--outline:hover {
    border: var(--color-primary);
    color: var(--color-primary);
  }

  /* Hero Right - Popular Products */
  .hero__sidebar {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .hero__sidebar-title {
    font-size: 0.75rem;
    font-weight: 500;
    color: var(--muted-foreground);
    text-transform: uppercase;
    letter-spacing: 0.1em;
    margin-bottom: 0.5rem;
  }

  .popular-card {
    display: flex;
    background-color: var(--card);
    border: 1px solid var(--color-primary);
    border-radius: 0.75rem;
    overflow: hidden;
    transition: all 0.3s ease;
  }

  .popular-card:hover {
    border-color: rgba(127, 140, 170, 0.5);
    box-shadow: 0 10px 30px -10px rgba(127, 140, 170, 0.2);
    transform: translateY(-4px);
  }

  .popular-card__image {
    width: 15rem;
    height: 10rem;
    flex-shrink: 0;
    overflow: hidden;
    background-color: #000;
  }

  .popular-card__image img {
    width: 100%;
    height: 100%;
    object-fit: contain;
    transition: transform 0.5s ease;
  }

  .popular-card:hover .popular-card__image img {
    transform: scale(1.05);
  }

  .popular-card__content {
    padding: 1rem;
    display: flex;
    flex-direction: column;
    justify-content: center;
  }

  .popular-card__name {
    font-size: 1.125rem;
    font-weight: 500;
    margin-bottom: 0.5rem;
  }

  .btn-price {
    display: inline-block;
    background-color: var(--color-primary);
    color: var(--color-foreground);
    padding: 0.5rem 1rem;
    border-radius: 0.375rem;
    font-size: 0.875rem;
    font-weight: 500;
    border: none;
    cursor: pointer;
    transition: all 0.2s ease;
    align-self: flex-start;
  }

  .btn-price:hover {
    background-color: var(--color-secondary);
  }

  /* ============================================
       PRODUCTS SECTION
    ============================================ */
  .products {
    padding: 4rem 2rem;
  }

  .products__container {
    max-width: 80rem;
    margin: 0 auto;
  }

  .products__header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 2rem;
  }

  .products__title {
    font-size: 1.5rem;
    font-weight: 600;
  }

  .products__filters {
    display: flex;
    gap: 1rem;
  }

  .products__filters button {
    background: none;
    border: none;
    color: var(--muted-foreground);
    font-size: 0.875rem;
    cursor: pointer;
    transition: color 0.2s ease;
    font-family: inherit;
  }

  .products__filters button:hover {
    color: var(--foreground);
  }

  .products__grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 1.5rem;
  }

  @media (max-width: 1024px) {
    .products__grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 640px) {
    .products__grid {
      grid-template-columns: 1fr;
    }
  }

  /* Product Card */
  .product-card {
    background-color: var(--card);
    border: 1px solid var(--color-primary);
    border-radius: 0.75rem;
    overflow: hidden;
    transition: all 0.3s ease;
  }

  .product-card:hover {
    border-color: rgba(127, 140, 170, 0.5);
    box-shadow: 0 10px 30px -10px rgba(127, 140, 170, 0.2);
    transform: translateY(-4px);
  }

  .product-card__image {
    aspect-ratio: 1 / 1;
    overflow: hidden;
    background-color: #000;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .product-card__image img {
    width: 100%;
    height: 100%;
    object-fit: contain;
    transition: transform 0.5s ease;
  }

  .product-card:hover .product-card__image img {
    transform: scale(1.05);
  }

  .product-card__content {
    padding: 1rem;
    display: flex;
    flex-direction: column;
    justify-content: center;
  }

  .product-card__name {
    font-weight: 500;
    margin-bottom: 0.5rem;
  }
{% endstylesheet %}
